<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.JasonLie.galgje.app.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:src="@drawable/hang0"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Input"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/letter3"
        android:layout_centerHorizontal="true"
        android:maxLength="1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Check"
        android:id="@+id/Check"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/letter1"
        android:layout_alignTop="@+id/letter2"
        android:layout_alignLeft="@+id/Check"
        android:visibility="invisible" />

  <TextView
    android:layout_width="10dp"
    android:layout_height="wrap_content"
    android:text=""
    android:id="@+id/letter2"
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@+id/Input"
    android:visibility="invisible" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/letter3"
            android:layout_alignTop="@+id/letter2"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/letter4"
                android:layout_alignTop="@+id/letter3"
                android:layout_toRightOf="@+id/Input"
                android:visibility="invisible" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/letter5"
                android:layout_above="@+id/Input"
                android:layout_alignRight="@+id/Check"
                android:visibility="invisible" />

    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:text="_"
        android:id="@+id/letter6"
        android:layout_above="@+id/Input"
        android:layout_alignLeft="@+id/letter1" />

    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:text="_"
        android:id="@+id/letter7"
        android:layout_alignTop="@+id/letter2"
        android:layout_toLeftOf="@+id/Input" />

    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:text="_"
        android:id="@+id/letter8"
        android:layout_alignTop="@+id/letter3"
        android:layout_alignLeft="@+id/letter3" />

    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:text="_"
        android:id="@+id/letter9"
        android:layout_above="@+id/Input"
        android:layout_alignLeft="@+id/letter4" />

    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:text="_"
        android:id="@+id/letter10"
        android:singleLine="false"
        android:layout_above="@+id/Input"
        android:layout_alignLeft="@+id/letter5" />

</RelativeLayout>
