<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:id="@+id/title"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:textSize="30sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Image"
                android:adjustViewBounds="true"
                android:maxHeight="300dp"
                android:paddingLeft="20dp"
                android:paddingTop="50dp"
                />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/Baddto"
                android:onClick="showPopup"
                android:text="@string/addto"
                android:layout_toRightOf="@+id/Image"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/Brate"
                android:text="@string/rate"
                android:layout_below="@+id/Baddto"
                android:layout_toRightOf="@+id/Image"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="50dp"
                />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/addepisode"
                android:text="@string/addepisode"
                android:layout_toRightOf="@+id/Image"
                android:layout_below="@+id/Brate"
                android:layout_marginLeft="50dp"
                />

        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Tgenre"
            android:text="@string/genre"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:textSize="20sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Tgenres"
            android:layout_toRightOf="@+id/Tgenre"
            android:layout_margin="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TStatusW"
            android:text="@string/statusw"
            android:paddingLeft="20dp"
            android:layout_marginTop="50dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TStatus"
            android:text="@string/status"
            android:layout_toRightOf="@+id/TStatusW"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="55dp"/>

    </RelativeLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/plot"/>

     </ScrollView>



</LinearLayout>


